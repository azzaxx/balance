<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="#211A0B"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="#eabf7b"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/editTextDate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:hint="Set date"
                        android:textColor="#ff3737"
                        android:textSize="22dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="#e4e3ad"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/editTextSumm"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:hint="Add sum"
                        android:inputType="number"
                        android:textColor="#ff3737"
                        android:textSize="22dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="#bcd4be"
                    android:orientation="vertical" >

                    <EditText
                        android:id="@+id/editTextNote"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:hint="Add note"
                        android:background="@android:color/transparent"
                        android:textColor="#ff3737"
                        android:textSize="22dp" >
                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#a6c8d2"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <CheckBox
                            android:id="@+id/foodCheckBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#3e484a"
                            android:text="Food" />

                        <CheckBox
                            android:id="@+id/vacationCheckBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#3e484a"
                            android:text="Vacation" />

                        <CheckBox
                            android:id="@+id/carCheckBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#3e484a"
                            android:text="Car" />

                        <CheckBox
                            android:id="@+id/giftsCheckBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#3e484a"
                            android:text="Gifts" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <CheckBox
                            android:id="@+id/roadCheckBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#3e484a"
                            android:text="Road"/>

                        <CheckBox
                            android:id="@+id/shopCheckBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#3e484a"
                            android:text="Shop" />

                        <CheckBox
                            android:id="@+id/familyCheckBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#3e484a"
                            android:text="Family" />

                        <CheckBox
                            android:id="@+id/pokerCheckBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#3e484a"
                            android:text="Poker" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <CheckBox
                            android:id="@+id/homeCheckBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Home"
                            android:textColor="#3e484a" />

                        <CheckBox
                            android:id="@+id/medecineCheckBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#3e484a"
                            android:text="Medicine" />

                        <CheckBox
                            android:id="@+id/petsCheckBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#3e484a"
                            android:text="Pets" />

                        <CheckBox
                            android:id="@+id/otherCheckBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#3e484a"
                            android:text="Other" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="#367689"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/buttonOk"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Add"
                        android:textColor="#ff3737"
                        android:textSize="16dp" />

                    <Button
                        android:id="@+id/buttonCancel"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Cancel"
                        android:textColor="#ff3737"
                        android:textSize="16dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>